page{
  margin: 0;
  padding: 0;
}

.total_page{
  width: 100%;
  height: 100%;
}

.top{
  width: 100%;
  height: 90%;
  margin-bottom: 15%;
}

.bottom{
  width: 100%;
  height: 10%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.button{
  width: 65px;
  height: inherit;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  color: white;
}

.right{
  height: 240rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  line-height: 240rpx;
}

.right view{
  flex: 1;
  color: white;
}

.left{
  height: inherit;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.cart_content{
  width: 100%;
  margin-left: 15rpx;
  padding-top: 15rpx;
  position: relative;
}

.title{
  font-size: 29rpx;
  font-weight: 500;
}

.desc{
  color: gray;
  font-size: 26rpx;
}

.price{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  top: 180rpx;
}

.count{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-right: 15rpx;
}

.count_content{
  width: 100rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.product_image image{
  width: 220rpx;
  height: 220rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}

.selected{
  height: inherit;
  background-color: #66B2FF;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.cancel{
  height: inherit;
  background-color: #3399FF;
}

.delete{
  height: inherit;
  background-color: #F4516C;
}

.all_selected{
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20rpx;
}

.all_selected_title{
  margin-left: 5rpx;
  font-size: 28rpx;
}

.active{
  border: 1rpx solid red;
}

.total_price{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: 400;
}

.total_price_content{
  font-size: 37rpx;
  color: red;
}

.bottom_button{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}