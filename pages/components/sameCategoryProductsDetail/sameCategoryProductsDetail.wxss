page {
  padding: 0;
  margin: 0;
}

.total {
  position: relative;
  margin-top: 0;
}

.top_nav {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #4F4F4F;
  font-size: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.top_nav_base {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #4F4F4F;
  font-size: 30rpx;
  border-bottom: 1rpx solid #fff;
  z-index: 2000;
  position: fixed;
  top: 0;
  background-color: white;
}

.all,
.shop_price,
.sold_num,
.filter {
  flex: 1;
}

.shop_price,
.sold_num,
.filter {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.all .title {
  text-align: center;
}

.title:visited {
  font-weight: bold;
}

.title_icons {
  width: 40rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.title_image {
  width: 38rpx;
  height: 38rpx;
}

.top {
  margin-bottom: -30rpx;
}

.bottom {
  margin-top: -30rpx;
}

.bottom_products {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  width: 46%;
  height: 490rpx;
  margin-top: 40rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  margin-left: 3%;
  background-color: rgba(251, 253, 251, 1);
  position: relative;
}

.item-condition {
  width: 100%;
  height: 100%;
}

.item-condition-not {
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.item-condition-not::after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
  background-color: #e8e8e8;
  opacity: 0.4;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.product_image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.product_title {
  width: 96%;
  margin-left: 2%;
  font-size: 28rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 不换行，只显示部分，多余的为省略号 */
}

.price {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 2%;
  width: 80%;
}

.product_shop_price {
  color: red;
}

.product_market_price {
  text-decoration: line-through;
  font-size: 25rpx;
  color: gray;
  margin-left: 20rpx;
}

.sold {
  font-size: 25rpx;
  position: absolute;
  left: 10rpx;
  margin-left: 1%;
}

.inside {
  color: white;
  font-size: 35rpx;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #696969;
  position: absolute;
  top: 30%;
  left: 25%;
  z-index: 1000;
}

.filter_content {
  width: 100%;
  height: 300rpx;
  position: fixed;
  z-index: 1020;
  top: 78rpx;
  background-color: white;
}

.button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  left: 260rpx;
}

.reset,
.submit {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid gray;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
}

.reset {
  background-color: #e8e8e8;
}

.submit {
  background-color: #006600;
  color: white;
}

.price_range {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 145rpx;
  top: 120rpx;
}

.line {
  width: 60rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.input {
  width: 200rpx;
  height: 40rpx;
  border: 1px solid gray;
  border-radius: 20rpx;
  text-align: center;
}

.placeholderStyle {
  text-align: center;
  font-size: 30rpx;
}

.filter_content_title {
  font-size: 29rpx;
  font-weight: 800;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 145rpx;
  top: 60rpx;
}