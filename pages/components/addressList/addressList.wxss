page{
  padding: 0;
  margin: 0;
  background-color:#E8E8E8;
}

.total{
  width: 100%;
  height: 100%;
}

.address_total{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: white;
}

.left{
  width: 15%;
  height: inherit;
}

.first{
  border: 1rpx solid #CFCFCF;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  font-size: 35rpx;
  color: white;
  line-height: 70rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-left: 20rpx;
  background-color: #CFCFCF;
}

.middle{
  width: 70%;
  height: inherit;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.name_phone{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.name{
  font-size: 29rpx;
}

.phone{
  font-size: 24rpx;
  color: gray;
  margin-left: 20rpx;
}

.address{
  font-size: 24rpx;
}

.right{
  width: 15%;
  font-size: 25rpx;
  color: gray;
  height: inherit;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.right::before{
  content: "";
  width: 1rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  right: 15%;
  background-color: #E8E8E8;
}

.button{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  background-color: #FF7F24;
  color: white;
  position: absolute;
  bottom: 5rpx;
  left: 10%;
}