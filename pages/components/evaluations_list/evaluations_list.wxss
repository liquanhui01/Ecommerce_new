page {
  margin: 0;
  padding: 0;
  background-color: rgb(232, 232, 232, 0.5);
  width: 100%;
  height: 100%;
}

.total {
  width: 100%;
  height: 100%;
}

.tab {
  width: 100%;
  height: 10%;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tab view {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #FFCCCC;
  margin-left: 20rpx;
  font-size: 25rpx;
  border-radius: 25rpx;
  text-align: center;
}

.active {
  border: 1px solid red;
  color: red;
}

.evaluations{
  width: 100%;
  height: 87%;
  margin-top: 3%;
  background-color:white;
}