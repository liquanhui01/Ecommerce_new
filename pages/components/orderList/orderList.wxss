 /*pages/components/orderList/orderList.wxss */
@import "/pages/components/templates/orderTemplate/orderTemplate.wxss";
page{
	margin: 0;
	padding: 0;
}
.container{
	display: flex;
	flex-direction: row;
	width: 100%;
	position: relative;
	margin-top: -190rpx;
}

.group{
	flex: 1;
	width: 80rpx;
	font-size: 14px;
	text-align: center;
	margin-top: 0;
	padding: 0;
}

.content{
	width: 100%;
	position: absolute;
	top: 260rpx;
	left: 0;
	display: none;
}

.active{
	color:#f87016;
	border-bottom: 2px solid #f87016;
}

.active .content{
	display: block;
}

.content .empty-page-image{
	width: 200rpx;
	height: 200rpx;
	position: relative;
	margin-top: 40%;
}

.content .empty-page-text{
	font-size: 19rpx;
	color: #9C9C9C;
}