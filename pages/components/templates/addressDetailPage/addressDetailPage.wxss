/* pages/components/templates/addressForm/addForm.wxss */
page {
  margin: 0;
  padding: 0;
  background-color: rgb(232, 232, 232, 0.5);
}

.content {
  width: 98%;
  height: 465rpx;
  margin-left: 1%;
  margin-top: 30rpx;
  background-color: #fff;
  border: 1px solid white;
  border-radius: 18rpx;
}

.content-item {
  height: 50rpx;
  width: 96%;
  margin-left: 2%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(207, 207, 207, 0.5);
  font-size: 29rpx;
}

.content-item text {
  position: absolute;
  left: 25rpx;
}

.content-item input {
  position: absolute;
  left: 180rpx;
  width: 500rpx;
}

.checkbox {
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.checkbox .button {
  width: 35rpx;
  height: 35rpx;
  border: 1px solid #E8E8E8;
  border-radius: 50%;
  margin-left: 13rpx;
}

.checked {
  background-color: #f87016;
  border: 1px solid #f87016;
}

.checkbox text {
  margin-left: 13rpx;
}

.tick {
  width: 35rpx;
  height: 35rpx;
}

.bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: white;
}

.bottom-button {
  width: 94%;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background-color: #f87016;
  border-radius: 40rpx;
  margin-left: 3%;
  margin-top: 18rpx;
}

.style {
  position: relative;
  margin-left: 150rpx;
}